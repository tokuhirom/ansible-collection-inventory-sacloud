# tagpr configuration
# See: https://github.com/Songmu/tagpr

[tagpr]
  # Version file to track
  versionFile = "galaxy.yml"

  # Version format in galaxy.yml (YAML field)
  vPrefix = true

  # Changelog file (optional)
  changelog = true

  # Command to update version in files
  # This is called with the new version as argument
  command = "bash scripts/update-version.sh"

  # Release branch (default: main)
  releaseBranch = "main"
